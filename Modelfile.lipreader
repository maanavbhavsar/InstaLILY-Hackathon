# Ollama Modelfile for the fine-tuned FieldTalk lip reader (Gemma 3 4B GGUF)
#
# Usage:
#   1. Place your GGUF file inside fieldtalk_lipreader_gguf/
#   2. Update the FROM line below with the exact filename
#   3. Run: ollama create fieldtalk-lipreader -f Modelfile.lipreader
#
# Example:
#   FROM ./fieldtalk_lipreader_gguf/unsloth.Q8_0.gguf

FROM ./fieldtalk_lipreader_gguf_v2/gemma3-lipreader-Q4_K_M.gguf
ADAPTER ./fieldtalk_lipreader_gguf_v2/mmproj-gemma3-lipreader-f16.gguf

PARAMETER temperature 0.1
PARAMETER top_p 0.9
PARAMETER num_predict 64
